<!DOCTYPE html>
<html>
  <head>
    <title>VGTracker</title>
    <%= csrf_meta_tags %>
    <script src="https://use.fontawesome.com/1827ac8642.js"></script>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="fixed-container">
      <div class="header">
        <div class="logo"><a href="/">VG Tracker</a></div>
        <div class="nav">
          <% if session[:user_id] && session[:user_id] == @current_user.id %>
            <%= link_to 'Search for Games', '/games', method: 'get', class: 'search' %>
            <%= link_to 'Sign Out', '/signout', method: 'delete', class: 'signout'%>
          <% else %>
            <div>
              <%= link_to 'Sign Up', '/signup', method: 'get', class: 'signup' %>
              <%= link_to 'Sign In', '/signin', method: 'get', class: 'signin' %>
            </div>
          <% end %>
        </div >
      </div>
    </div>

    <%= yield %>

  </body>
</html>
