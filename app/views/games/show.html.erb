<div class="left">
  <h2>Information for <%= @game.name %>:</h2>
  <br />
  <img src="<%= @game.cover%>">
  <h3>Year:
  <%= !@game.year ? 'No year to show!' : @game.year %></h3>
  <h3>Summary:
  <%= !@game.summary ? 'No summary to show!' : @game.summary %></h3>
  <h3>Genres:
  <%= @game.genres.empty? ? 'No genres available!' : @game.genres.uniq.map {|genre| genre.name}.join(', ') %></h3>
  <h3>Modes:
  <%= @game.modes.empty? ? 'No modes available!' : @game.modes.uniq.map {|mode| mode.name}.join(', ') %></h3>
  <h3>Platforms that this game has been purchased for:
  <%= @game.platforms.empty? ? 'No platforms have been assigned yet!' : @game.platforms.uniq.map {|platform| platform.name}.join(', ') %></h3>
  <h3>Purchased From:
  <%= @game.sources.empty? ? 'No retailers have been assigned yet!' : @game.sources.uniq.map {|source| source.name}.join(', ') %></h3>
  <h3>Users Playing this Game:
  <%= @game.users.empty? ? 'No users seem to be playing this game!' : @game.users.uniq.map {|user| user.username}.join(', ') %></h3>
  <br /><br />
  <% if @current_user.admin? %>
    <%= button_to 'Edit Game', edit_game_path, method: 'get' %>
    <%= button_to 'Delete Game', @game, method: 'delete' %>
  <% end %>
  <%= button_to 'Add Game to My Profile', new_library_path, method: 'get', params: {game_id: @game.id, game_name: @game.name}, class: 'addgame' %>
</div>
